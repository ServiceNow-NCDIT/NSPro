        <list_style/>
        <messages/>
        <name>Assign NSPro Site Id</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[action.setRedirectURL(current);
current.update();
if (! current.isActionAborted())
	// call a script include to return a new id
	// Instantiate the nsw2 utilities
	var nsw2util = new NcditNsw2Utils();
	var newSiteId = nsw2util.nsw2Util_getNewSiteId("CESite");

	// update field with provided site id.
	current.site_id = newSiteId;
	current.work_notes = "New site id requested is: " + newSiteId;
	current.update();
	if (current.site_id != "") {
		gs.addInfoMessage("A site id has been assigned. Create site record soon to retain this id.");
	} else {
		gs.addErrorMessage("nsw2 server side script was called but no site_id was assigned. Check logs if you suspect there is an error.");
	}
	
	// redirect to here
    action.setRedirectURL(current);
]]></script>
