        <action_name>nsw2_assign_siteId</action_name>
        <active>true</active>
        <client>false</client>
        <client_script_v2><![CDATA[function onClick(g_form) {

}]]></client_script_v2>
        <comments>This will call a script include to assign a site id. 7/11/22 Only valid for New request.</comments>
        <condition>(current.request_type == '1') &amp;&amp; (current.site_id &lt; '0' || current.site_id == "")</condition>
