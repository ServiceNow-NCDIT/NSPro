        <name>Terminate circuit(s)</name>
        <onclick/>
        <order>400</order>
        <script><![CDATA[action.setRedirectURL(current);
current.update();
if (!current.isActionAborted()) {
    // call a script include to perform the work
    // Instantiate the nsw2 utilities
    var nsw2util = new NcditNsw2Utils();
    var cirOrdResp = nsw2util.nsw2Util_terminateCircuits(current);
    if (cirOrdResp.status == 'OK') {
        gs.addInfoMessage("Circuit order status: nsw2Util_terminateCircuits called, return OK.");
		gs.addInfoMessage("nsw2Util_terminateCircuits msg: " + cirOrdResp.message);
    } else {
        gs.addErrorMessage("nsw2 server side script to send circuit termination requests was called and returned " + cirOrdResp.status + " , " + cirOrdResp.message);
    }

}
// redirect to here
action.setRedirectURL(current);
]]></script>
